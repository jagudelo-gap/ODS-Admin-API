meta {
  name: OdsInstances - Invalid Connection String
  type: http
  seq: 5
}

post {
  url: {{API_URL}}/v2/odsInstances/
  body: json
  auth: inherit
}

body:json {
  {
      "name": "Test Connection String",
      "instanceType": "OdsInstance",
      "connectionString": "WrongConnection"
  }
}

script:post-response {
  test("POST OdsInstances Invalid ConnectionString: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("POST OdsInstances Invalid ConnectionString: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("POST OdsInstances Invalid ConnectionString: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("POST OdsInstances Invalid ConnectionString: Response errors include messages by property", function () {
      expect(response.errors["ConnectionString"].length).to.equal(1);
  });
  
  test("POST OdsInstances Invalid ConnectionString: Response errors include messages with wrong elements", function () {
      expect(response.errors["ConnectionString"][0]).to.contain("is not valid");
  });
}

