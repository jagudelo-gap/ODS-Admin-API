meta {
  name: OdsInstances - Invalid
  type: http
  seq: 3
}

post {
  url: {{API_URL}}/v2/odsInstances/
  body: json
  auth: inherit
}

body:json {
  {
      "name": "",
      "instanceType": "",
      "connectionString": ""
  }
}

script:post-response {
  test("POST OdsInstances Invalid: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("POST OdsInstances Invalid: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("POST OdsInstances Invalid: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("POST OdsInstances Invalid: Response errors include messages by property", function () {
      expect(response.errors["Name"].length).to.equal(1);
      expect(response.errors["ConnectionString"].length).to.equal(1);
  });
  
  test("POST OdsInstances Invalid: Response errors include messages with wrong elements", function () {
      expect(response.errors["Name"][0]).to.contain("'Name' must not be empty");
      expect(response.errors["ConnectionString"][0]).to.contain("'Connection String' must not be empty");
  });
}

settings {
  encodeUrl: true
}
