meta {
  name: OdsInstances - Invalid Existing Name
  type: http
  seq: 18
}

put {
  url: {{API_URL}}/v2/odsInstances/{{CreatedOdsInstanceId}}
  body: json
  auth: inherit
}

body:json {
  {
      "name": "Other Ods Instance {{OtherOdsInstanceGUID}}",
      "instanceType": "Other Ods Instance Type",
      "connectionString": "{{connectionString}}"
  }
}

script:post-response {
  test("PUT OdsInstance Invalid Existing OdsInstance: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("PUT OdsInstance Invalid Existing OdsInstance: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("PUT OdsInstance Invalid Existing OdsInstance: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("PUT OdsInstance Invalid Existing OdsInstance: Response errors include messages by property", function () {
      expect(response.errors.Name.length).to.equal(1);
      expect(response.errors.Name[0]).to.contain("already exists");
  });
  
}

settings {
  encodeUrl: true
}
