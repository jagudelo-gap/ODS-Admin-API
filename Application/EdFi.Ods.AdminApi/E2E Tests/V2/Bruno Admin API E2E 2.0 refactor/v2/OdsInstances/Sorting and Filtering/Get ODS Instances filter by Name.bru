meta {
  name: Get ODS Instances filter by Name
  type: http
  seq: 9
}

get {
  url: {{API_URL}}/v2/odsInstances?offset={{offset}}&limit={{limit}}&name={{FILTERNAMEODS}}
  body: json
  auth: inherit
}

params:query {
  offset: {{offset}}
  limit: {{limit}}
  name: {{FILTERNAME}}
}

script:post-response {
  test("GET Ods Instances: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("GET Ods Instances: Response result includes Ods instance", function () {
      const results = res.getBody();
      expect(results).to.have.lengthOf(1);
  });
  
  test("GET Ods Instances: Response result contains requested Ods instance", function () {
      const results = res.getBody();
      expect(results[0].name).to.eql(String(bru.getEnvVar("FILTERNAMEODS")));
  });
  
}

settings {
  encodeUrl: true
}
