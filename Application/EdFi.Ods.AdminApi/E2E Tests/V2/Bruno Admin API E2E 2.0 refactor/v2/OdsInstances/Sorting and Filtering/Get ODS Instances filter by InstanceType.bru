meta {
  name: Get ODS Instances filter by InstanceType
  type: http
  seq: 10
}

get {
  url: {{API_URL}}/v2/odsInstances?offset={{offset}}&limit={{limit}}&instanceType={{FILTERINSTANCETYPE}}
  body: json
  auth: inherit
}

params:query {
  offset: {{offset}}
  limit: {{limit}}
  instanceType: {{FILTERINSTANCETYPE}}
}

script:post-response {
  test("GET Ods Instances: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("GET Ods Instances: Response result includes Ods Instance", function () {
      const results = res.getBody();
      expect(results).to.have.lengthOf(1);
  });
  
  test("GET Ods Instances: Response result contains requested Ods Instance", function () {
      const results = res.getBody();
      expect(results[0].instanceType).to.eql(String(bru.getEnvVar("FILTERINSTANCETYPE")));
  });
  
}

settings {
  encodeUrl: true
}
