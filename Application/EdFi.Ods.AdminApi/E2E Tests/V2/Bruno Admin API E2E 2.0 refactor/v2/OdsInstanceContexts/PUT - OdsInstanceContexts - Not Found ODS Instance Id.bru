meta {
  name: OdsInstanceContexts - Not Found ODS Instance Id
  type: http
  seq: 19
}

put {
  url: {{API_URL}}/v2/OdsInstanceContexts/{{CreatedOdsInstanceContextId}}
  body: json
  auth: inherit
}

body:json {
  {
    "odsInstanceId": 9000,
    "contextKey": "ckey",
    "contextValue": "cvalue"
  }
}

script:post-response {
  test("PUT OdsInstanceContexts Invalid: Status code is not Found", function () {
      expect(res.getStatus()).to.equal(404);
  });
  
  const response = res.getBody();
  
  test("PUT OdsInstanceContexts Invalid: Response matches error format", function () {
      expect(response).to.have.property("title");
  });
  
  
  test("PUT ODS Instance Contexts Invalid ODSInstance: Response errors include messages by property", function () {
      expect(response.title).to.contain("Not found");
      expect(response.title).to.contain("odsInstance");
      expect(response.title).to.contain("It may have been recently deleted");
  });
}

settings {
  encodeUrl: true
}
