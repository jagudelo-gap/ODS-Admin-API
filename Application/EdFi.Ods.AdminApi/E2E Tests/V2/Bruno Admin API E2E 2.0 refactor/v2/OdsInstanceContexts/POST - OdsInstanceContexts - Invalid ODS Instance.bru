meta {
  name: OdsInstanceContexts - Invalid ODS Instance
  type: http
  seq: 4
}

post {
  url: {{API_URL}}/v2/OdsInstanceContexts/
  body: json
  auth: inherit
}

body:json {
  {
    "odsInstanceId": 0,
    "contextKey": "ckey",
    "contextValue": "cvalue"
  }
}

script:post-response {
  test("POST ODS Instance Contexts Invalid: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("POST ODS Instance Contexts Invalid: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("POST ODS Instance Contexts Invalid: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("POST ODS Instance Contexts Invalid ODSInstance: Response errors include messages by property", function () {
      expect(response.errors.OdsInstanceId.length).to.equal(1);
      expect(response.errors.OdsInstanceId[0]).to.contain("provide valid ods instance id.");
  });
}

settings {
  encodeUrl: true
}
