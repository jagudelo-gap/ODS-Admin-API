meta {
  name: OdsInstanceContexts
  type: http
  seq: 14
}

put {
  url: {{API_URL}}/v2/OdsInstanceContexts/{{CreatedOdsInstanceContextId}}
  body: json
  auth: inherit
}

body:json {
  {
    "odsInstanceId": {{ODSInstanceId}},
    "contextKey": "ckey",
    "contextValue": "cvalue"
  }
}

script:post-response {
  test("PUT OdsInstanceContexts: Status code is Created", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  console.log("ðŸ”§ Setting post environment to ignore SSL certificates...");
  
  // Safely set Node.js environment variable if available (CLI only)
  try {
    if (typeof process !== 'undefined' && process.env) {
      process.env.NODE_TLS_REJECT_UNAUTHORIZED = '0';
    }
  } catch (e) {
    // Ignore in UI environment
  }
  
  const axios = require('axios');
  const API_URL = bru.getEnvVar("API_URL");
  const TOKEN = bru.getEnvVar("TOKEN");

  // Configure axios to handle SSL and network issues
  const axiosConfig = {
    headers: {
      'Content-Type': 'application/json',
      'Authorization': `Bearer ${TOKEN}`
    },
    validateStatus: function (status) {
      return status < 500;
    },
    timeout: 30000
  };

  // Add tenant header if multitenant mode is enabled
  if (bru.getEnvVar("isMultitenant") == "true") {
    axiosConfig.headers['Tenant'] = `${bru.getEnvVar("tenant1")}`;
  }

  try {
    const odsInstancesContextCreatedId = bru.getVar("CreatedOdsInstanceContextId");
    const odsInstancesContextResponse = await axios.get(`${API_URL}/v2/OdsInstanceContexts/${odsInstancesContextCreatedId}`, axiosConfig);

    if (odsInstancesContextResponse.status === 200) {
      console.log("âœ… odsInstancesContext created successfully");
      test("PUT OdsInstanceContexts: Response includes updated OdsInstanceContext", function () {
         expect(odsInstancesContextResponse.data.contextKey).to.equal("ckey");
         expect(odsInstancesContextResponse.data.contextValue).to.be.not.empty;
         expect(odsInstancesContextResponse.data.odsInstanceId).to.be.not.equal(0);
      });

    } else {
      console.log("âŒ Failed to create odsInstancesContext");
      console.log("Status:", odsInstancesContextResponse.status);
      console.log("Response data:", JSON.stringify(odsInstancesContextResponse.data, null, 2));
      throw new Error(`Failed to create odsInstancesContext - Status: ${odsInstancesContextResponse.status}, Data: ${JSON.stringify(odsInstancesContextResponse.data)}`);
    }
    
  } catch (error) {
    console.log("Error in post-request setup:", error.message);
  }
  
}

settings {
  encodeUrl: true
}
