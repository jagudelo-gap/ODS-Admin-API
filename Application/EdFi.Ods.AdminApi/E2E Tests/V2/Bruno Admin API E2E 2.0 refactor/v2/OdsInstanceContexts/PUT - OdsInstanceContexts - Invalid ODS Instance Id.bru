meta {
  name: OdsInstanceContexts - Invalid ODS Instance Id
  type: http
  seq: 18
}

put {
  url: {{API_URL}}/v2/OdsInstanceContexts/{{CreatedOdsInstanceContextId}}
  body: json
  auth: inherit
}

body:json {
  {
    "odsInstanceId": 0,
    "contextKey": "ckey",
    "contextValue": "cvalue"
  }
}

script:post-response {
  test("PUT OdsInstanceContexts Invalid: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("PUT OdsInstanceContexts Invalid: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("PUT OdsInstanceContexts Invalid: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("PUT OdsInstanceContexts Invalid: Invalid OdsInstanceId", function () {
     expect(response.errors.OdsInstanceId[0]).to.contain("valid ods instance id");
  });
}

settings {
  encodeUrl: true
}
