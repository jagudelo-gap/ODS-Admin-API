meta {
  name: OdsInstanceContexts - Not Found ODS Instance
  type: http
  seq: 5
}

post {
  url: {{API_URL}}/v2/OdsInstanceContexts/
  body: json
  auth: inherit
}

body:json {
  {
    "odsInstanceId": 9000,
    "contextKey": "ckey",
    "contextValue": "cvalue"
  }
}

script:post-response {
  test("POST ODS Instance Contexts Invalid: Status code is Not Found", function () {
      expect(res.getStatus()).to.equal(404);
  });
  
  const response = res.getBody();
  
  test("POST ODS Instance Contexts Invalid: Response matches title property", function () {
      expect(response).to.have.property("title");
  });
  
  
  test("POST ODS Instance Contexts Invalid ODSInstance: Response errors include messages by property", function () {
      expect(response.title).to.contain("Not found");
      expect(response.title).to.contain("odsInstance");
      expect(response.title).to.contain("It may have been recently deleted");
  });
}

settings {
  encodeUrl: true
}
