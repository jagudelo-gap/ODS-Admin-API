meta {
  name: ResourceClaimsActions - Filter by ResourceName
  type: http
  seq: 6
}

get {
  url: {{API_URL}}/v2/resourceClaimActions?resourceName={{RESOURCENAMEFILTER}}
  body: none
  auth: inherit
}

params:query {
  resourceName: {{RESOURCENAMEFILTER}}
}

script:post-response {
  test("GET ResourceClaimsActions: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  const response = res.getBody();
  const Ajv = require('ajv');
  const ajv = new Ajv();
  const GetResourceClaimsActionsSchema = {
    "type": "array",
    "items": [
      {
        "type": "object",
        "properties": {
          "resourceClaimId": {
            "type": "integer"
          },
          "resourceName": {
            "type": "string"
          },
          "claimName": {
            "type": "string"
          },
          "actions": {
            "type": "array",
            "items": [
            {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              },
              "required": [
                "name"
              ]
            }]
          }
        },
        "required": [
          "resourceClaimId",
          "resourceName",
          "claimName",
          "actions"
        ]
      }
    ]
  }
  
  test("GET ResourceClaimsActions: Validation Schema Response", () => {
      const valid = ajv.validate(GetResourceClaimsActionsSchema, response);
      expect(valid).to.be.true;
      
      if (!valid) {
          console.log("Schema validation errors:", ajv.errors);
      }
  });
  
  test("GET ResourceClaimsActions: Response result includes resource claim action", function () {
      const results = res.getBody();
      expect(results).to.have.lengthOf(1);
  });
  
  test("GET ResourceClaimsActions: Response result contains requested resource claim action", function () {
      const results = res.getBody();
      expect(results[0].resourceName).to.eql(bru.getEnvVar("RESOURCENAMEFILTER"));
  });
  
}

settings {
  encodeUrl: true
}
