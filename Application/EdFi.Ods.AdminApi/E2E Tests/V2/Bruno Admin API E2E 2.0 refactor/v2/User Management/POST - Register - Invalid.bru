meta {
  name: Register - Invalid
  type: http
  seq: 2
}

post {
  url: {{API_URL}}/connect/register
  body: formUrlEncoded
  auth: none
}

body:form-urlencoded {
  ClientId: 
  ClientSecret: 
  DisplayName: 
}

script:post-response {
  test("POST Register Invalid: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("POST Register Invalid: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("POST Register Invalid: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("POST Register Invalid: Response errors include messages by property", function () {
      expect(response.errors["ClientId"].length).to.equal(1);
      expect(response.errors["ClientSecret"].length).to.equal(1);
      expect(response.errors["DisplayName"].length).to.equal(1);
  });
  
  
}

settings {
  encodeUrl: true
}
