meta {
  name: Token - Incorrect Secret
  type: http
  seq: 9
}

post {
  url: {{API_URL}}/connect/token
  body: formUrlEncoded
  auth: inherit
}

body:form-urlencoded {
  client_id: {{RegisteredClientId}}
  client_secret: {{$guid}}
  grant_type: client_credentials
  scope: edfi_admin_api/full_access
}

script:post-response {
  test("POST Token Incorrect Secret: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(401);
  });
  
  const response = res.getBody();
  
  test("POST Token Incorrect Secret: Response includes error message", function () {
      expect(response).to.have.property("error");
      expect(response).to.have.property("error_description");
      expect(response["error_description"]).to.contain("Access Denied. Please review your information and try again.");
  });
  
  bru.deleteVar("RegisteredClientId");
  bru.deleteVar("RegisteredClientSecret");
}

settings {
  encodeUrl: true
}
