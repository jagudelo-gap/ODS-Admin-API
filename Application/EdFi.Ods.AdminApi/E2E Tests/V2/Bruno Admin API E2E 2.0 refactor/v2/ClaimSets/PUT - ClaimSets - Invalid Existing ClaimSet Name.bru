meta {
  name: ClaimSets - Invalid Existing ClaimSet Name
  type: http
  seq: 49
}

put {
  url: {{API_URL}}/v2/claimSets/{{CreatedClaimSetId}}
  body: json
  auth: inherit
}

body:json {
  {
      "name": "Other Test ClaimSet {{OtherClaimSetGUID}}"
  }
}

script:post-response {
  test("PUT ClaimSets Invalid Existing ClaimSets: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("PUT ClaimSets Invalid Existing ClaimSets: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("PUT ClaimSets Invalid Existing ClaimSets: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("PUT ClaimSets Invalid Existing ClaimSets: Response errors include messages by property", function () {
      expect(response.errors.Name.length).to.equal(1);
      expect(response.errors.Name[0]).to.contain("already exists");
  });
}

settings {
  encodeUrl: true
}
