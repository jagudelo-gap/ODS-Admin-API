script:post-response {
  test("POST ClaimSets Invalid: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("POST ClaimSets Invalid: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("POST ClaimSets Invalid: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("POST ClaimSets Invalid: Response errors include messages by property", function () {
      expect(response.errors["Name"].length).to.equal(1);
  });
  
}

