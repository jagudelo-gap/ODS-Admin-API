script:post-response {
  test("POST ClaimSets - Import: Resource duplication: name Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("POST ClaimSets - Import: Resource duplication: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("POST ClaimSets - Import: Resource duplication: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("POST ClaimSets - Import: Resource duplication:  Response errors include messages by property and resource", function () {
      expect(response.errors.ResourceClaims.length).to.equal(1);
      ["Only unique resource claims", "duplicate resource: 'gradeLevelDescriptor'"].forEach((substring) => {
          expect(response.errors.ResourceClaims[0]).to.contain(substring);
      }); 
  });
}

