meta {
  name: Vendors - Not Found
  type: http
  seq: 19
}

put {
  url: {{API_URL}}/v2/vendors/{{CreatedVendorId}}
  body: json
  auth: inherit
}

body:json {
  {
      "company": "Updated Test Company",
      "namespacePrefixes": "uri://academicbenchmarks.com",
      "contactName": "Updated User",
      "contactEmailAddress": "updated@example.com"
  }
  
}

script:post-response {
  test("PUT Vendors NotFound: Status code is Not Found", function () {
      expect(res.getStatus()).to.equal(404);
  });
  
  test("PUT Vendors NotFound: Response matches error format", function () {
      const response = res.getBody();
  
      expect(response).to.have.property("title");
  });
  
  test("PUT Vendors NotFound: Response title is helpful and accurate", function () {
      const response = res.getBody();
  
      expect(response.title).to.contain("Not found");
      expect(response.title).to.contain("vendor");
      expect(response.title).to.contain(bru.getVar("CreatedVendorId"));
  });
  
}

settings {
  encodeUrl: true
}
