meta {
  name: Vendors - Invalid
  type: http
  seq: 3
}

post {
  url: {{API_URL}}/v2/vendors
  body: json
  auth: inherit
}

body:json {
  {
      "company": "",
      "namespacePrefixes": "",
      "contactName": "",
      "contactEmailAddress": ""
  }
}

script:post-response {
  test("POST Vendors Invalid: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("POST Vendors Invalid: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("POST Vendors Invalid: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("POST Vendors Invalid: Response errors include messages by property", function () {
      expect(response.errors["Company"].length).to.equal(1);
      expect(response.errors["ContactName"].length).to.equal(1);
      expect(response.errors["ContactEmailAddress"].length).to.equal(2);
  });
  
}

settings {
  encodeUrl: true
}
