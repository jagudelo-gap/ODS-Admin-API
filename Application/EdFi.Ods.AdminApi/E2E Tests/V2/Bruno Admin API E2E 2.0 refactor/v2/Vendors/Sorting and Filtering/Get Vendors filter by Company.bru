meta {
  name: Get Vendors filter by Company
  type: http
  seq: 13
}

get {
  url: {{API_URL}}/v2/vendors?offset={{offset}}&limit={{limit}}&company={{FILTERCOMPANY}}
  body: json
  auth: inherit
}

params:query {
  offset: {{offset}}
  limit: {{limit}}
  company: {{FILTERCOMPANY}}
}

script:post-response {
  test("GET Vendors: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("GET Vendors: Response result includes vendor", function () {
      const results = res.getBody();
      expect(results).to.have.lengthOf(1);
  });
  
  test("GET Vendors: Response result contains requested vendor", function () {
      const results = res.getBody();
      expect(results[0].company).to.eql(bru.getEnvVar("FILTERCOMPANY"));
  });
  
}

settings {
  encodeUrl: true
}
