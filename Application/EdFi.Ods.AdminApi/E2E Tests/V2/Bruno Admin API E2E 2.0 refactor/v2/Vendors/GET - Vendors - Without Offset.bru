meta {
  name: Vendors - Without Offset
  type: http
  seq: 7
}

get {
  url: {{API_URL}}/v2/vendors?limit={{limit}}
  body: json
  auth: inherit
}

params:query {
  limit: {{limit}}
}

script:post-response {
  test("GET Vendors: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  const response = res.getBody();
  const results = res.getBody();
  
  test("GET Vendors: Response result includes vendors", function () {
      const results = res.getBody();
      expect(results.length).to.be.greaterThan(0);   
  });
  
  const Ajv = require('ajv');
  const ajv = new Ajv();
  const GetVendorsSchema = {
    "type": "array",
    "items": [
      {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "company": {
            "type": "string"
          },
          "namespacePrefixes": {
            "type": "string"
          },
          "contactName": {
            "type": "string"
          },
          "contactEmailAddress": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "company",
          "namespacePrefixes",
          "contactName",
          "contactEmailAddress"
        ]
      }
    ]
  }
  
  test("GET Vendors: Validation Schema Response", () => {
      const valid = ajv.validate(GetVendorsSchema, response);
      expect(valid).to.be.true;
      
      if (!valid) {
          console.log("Schema validation errors:", ajv.errors);
      }
  });
  
}

settings {
  encodeUrl: true
}
