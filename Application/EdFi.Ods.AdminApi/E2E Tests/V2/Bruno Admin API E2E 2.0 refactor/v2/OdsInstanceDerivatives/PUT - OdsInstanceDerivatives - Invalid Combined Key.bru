meta {
  name: OdsInstanceDerivatives - Invalid Combined Key
  type: http
  seq: 24
}

put {
  url: {{API_URL}}/v2/OdsInstanceDerivatives/{{CreatedOdsInstanceDerivativeId}}
  body: json
  auth: inherit
}

body:json {
  {
    "odsInstanceId": {{ODSInstanceId}},
    "derivativeType": "Snapshot",
    "connectionString": "{{connectionString}}"
  }
}

script:pre-request {
  console.log("ðŸ”§ Setting pre environment to ignore SSL certificates...");
  
  // Safely set Node.js environment variable if available (CLI only)
  try {
    if (typeof process !== 'undefined' && process.env) {
      process.env.NODE_TLS_REJECT_UNAUTHORIZED = '0';
    }
  } catch (e) {
    // Ignore in UI environment
  }
  
  const axios = require('axios');
  const API_URL = bru.getEnvVar("API_URL");
  const TOKEN = bru.getEnvVar("TOKEN");

  // Configure axios to handle SSL and network issues
  const axiosConfig = {
    headers: {
      'Content-Type': 'application/json',
      'Authorization': `Bearer ${TOKEN}`
    },
    validateStatus: function (status) {
      return status < 500;
    },
    timeout: 30000
  };

  // Add tenant header if multitenant mode is enabled
  if (bru.getEnvVar("isMultitenant") == "true") {
    axiosConfig.headers['Tenant'] = `${bru.getEnvVar("tenant1")}`;
  }

  try {
    const odsInstanceDerivativesResponse = await axios.post(`${API_URL}/v2/odsInstanceDerivatives`, {
      "odsInstanceId": `${bru.getVar("ODSInstanceId")}`,
      "derivativeType": "Snapshot",
      "connectionString": `${bru.getEnvVar("connectionString")}`
    }, axiosConfig);

    if (odsInstanceDerivativesResponse.status === 201) {
      console.log("âœ… odsInstanceDerivatives created successfully");
      let headers = odsInstanceDerivativesResponse.headers; 
      expect(headers).to.have.property("location");
      const locationHeader = headers.location;
      if(locationHeader) {
          const locationStr = Array.isArray(locationHeader) ? locationHeader[0] : locationHeader;
          const id = locationStr.split("/").pop();
          if(id) {
              bru.setVar("OtherOdsInstanceDerivativeId", id);
          }
      }
    } else {
      console.log("âŒ Failed to create odsInstanceContexts");
      console.log("Status:", odsInstanceDerivativesResponse.status);
      console.log("Response data:", JSON.stringify(odsInstanceDerivativesResponse.data, null, 2));
      throw new Error(`Failed to create odsInstanceContexts - Status: ${odsInstanceDerivativesResponse.status}, Data: ${JSON.stringify(odsInstanceDerivativesResponse.data)}`);
    }
    
  } catch (error) {
    console.log("Error in pre-request setup:", error.message);
  }

}

script:post-response {
  test("PUT OdsInstanceDerivatives Invalid: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  
  test("PUT OdsInstanceDerivatives Invalid: Response matches error format", function () {
      expect(response).to.have.property("title");
  });
  
  test("PUT OdsInstanceDerivatives Invalid: Invalid OdsInstanceId", function () {
      expect(response.title).to.contain("Validation failed");
      expect(response.errors).to.be.an("object").and.not.to.be.empty;
      expect(response.errors[""]).to.be.an("array").that.includes("The combined key ODS instance id and derivative type must be unique.");
  });
}

settings {
  encodeUrl: true
}
