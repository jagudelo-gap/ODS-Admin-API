meta {
  name: OdsInstanceDerivatives
  type: http
  seq: 16
}

put {
  url: {{API_URL}}/v2/OdsInstanceDerivatives/{{CreatedOdsInstanceDerivativeId}}
  body: json
  auth: inherit
}

body:json {
  {
    "odsInstanceId": {{ODSInstanceId}},
    "derivativeType": "ReadReplica",
    "connectionString": "{{connectionString}}"
  }
}

script:post-response {
  test("PUT OdsInstanceDerivatives: Status code is Created", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  console.log("ðŸ”§ Setting post environment to ignore SSL certificates...");
  
  // Safely set Node.js environment variable if available (CLI only)
  try {
    if (typeof process !== 'undefined' && process.env) {
      process.env.NODE_TLS_REJECT_UNAUTHORIZED = '0';
    }
  } catch (e) {
    // Ignore in UI environment
  }
  
  const axios = require('axios');
  const API_URL = bru.getEnvVar("API_URL");
  const TOKEN = bru.getEnvVar("TOKEN");

  // Configure axios to handle SSL and network issues
  const axiosConfig = {
    headers: {
      'Content-Type': 'application/json',
      'Authorization': `Bearer ${TOKEN}`
    },
    validateStatus: function (status) {
      return status < 500;
    },
    timeout: 30000
  };

  // Add tenant header if multitenant mode is enabled
  if (bru.getEnvVar("isMultitenant") == "true") {
    axiosConfig.headers['Tenant'] = `${bru.getEnvVar("tenant1")}`;
  }

  try {
    const odsInstanceDerivativeCreated = bru.getVar("CreatedOdsInstanceDerivativeId")
    const odsInstanceDerivativeResponse = await axios.get(`${API_URL}/v2/OdsInstanceDerivatives/${odsInstanceDerivativeCreated}`, axiosConfig);

    if (odsInstanceDerivativeResponse.status === 200) {
      console.log("âœ… odsInstanceContexts created successfully");
      test("PUT OdsInstanceDerivatives: Response includes updated OdsInstanceDerivative", function () {
        expect(odsInstanceDerivativeResponse.data.derivativeType).to.equal("ReadReplica");
        expect(odsInstanceDerivativeResponse.data.odsInstanceId).to.be.not.equal(0);
       });
    } else {
      console.log("âŒ Failed to get odsInstanceDerivative");
      console.log("Status:", odsInstanceDerivativeResponse.status);
      console.log("Response data:", JSON.stringify(odsInstanceDerivativeResponse.data, null, 2));
      throw new Error(`Failed to get odsInstanceDerivative - Status: ${odsInstanceDerivativeResponse.status}, Data: ${JSON.stringify(odsInstanceDerivativeResponse.data)}`);
    }
    
  } catch (error) {
    console.log("Error in post-request setup:", error.message);
  }  
}

settings {
  encodeUrl: true
}
