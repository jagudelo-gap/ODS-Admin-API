meta {
  name: Reset Credential
  type: http
  seq: 21
}

put {
  url: {{API_URL}}/v2/applications/{{CreatedApplicationId}}/reset-credential
  body: none
  auth: inherit
}

script:post-response {
  test("PUT ResetCredentials: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  const response = res.getBody();
  const result = res.getBody();
  
  test("PUT ResetCredentials: Response result includes application key and secret", function () {
      expect(result).to.have.property("id");
      expect(result).to.have.property("key");
      expect(result).to.have.property("secret");
  });  

  const Ajv = require('ajv');
  const ajv = new Ajv();
  const PutResetCredentialsSchema = {
    "type": "object",
    "properties": {
      "id": {
        "type": "integer"
      },
      "key": {
        "type": "string"
      },
      "secret": {
        "type": "string"
      }
    },
    "required": [
      "id",
      "key",
      "secret"
    ]
  }

  test("PUT Reset Credentials: Validation Schema Response", () => {
      const valid = ajv.validate(PutResetCredentialsSchema, response);
      expect(valid).to.be.true;
      
      if (!valid) {
          console.log("Schema validation errors:", ajv.errors);
      }
  });
}

settings {
  encodeUrl: true
}
