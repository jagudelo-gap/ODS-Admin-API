}

script:post-response {
  test("POST Applications Invalid Profile: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  const errors = res.getBody().errors;
  
  test("POST Applications Invalid Profile: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("POST Applications Invalid Profile: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("POST Applications Invalid Profile: Response errors include messages by property", function () {
      expect(response.errors.ProfileIds.length).to.equal(1);
      expect(response.errors.ProfileIds[0]).to.contain("not found");
  });
  
}

