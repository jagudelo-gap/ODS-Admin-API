meta {
  name: Get Applications filter by Application Name
  type: http
  seq: 9
}

get {
  url: {{API_URL}}/v2/applications?offset={{offset}}&limit={{limit}}&applicationName={{FILTERAPPLICATIONNAME}}
  body: json
  auth: inherit
}

params:query {
  offset: {{offset}}
  limit: {{limit}}
  applicationName: {{FILTERAPPLICATIONNAME}}
}

script:post-response {
  test("GET Applications: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("GET Applications: Response result includes application", function () {
      const results = res.getBody();
      expect(results).to.have.lengthOf(1);
  });
  
  test("GET Applications: Response result contains requested application", function () {
      const results = res.getBody();
      expect(results[0].applicationName).to.eql(String(bru.getEnvVar("FILTERAPPLICATIONNAME")));
  });
  
}

settings {
  encodeUrl: true
}
