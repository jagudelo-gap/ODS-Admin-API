meta {
  name: Get Applications order by ClaimsetName Asc
  type: http
  seq: 7
}

get {
  url: {{API_URL}}/v2/applications?offset={{offset}}&limit={{limit}}&orderBy=claimsetName&direction=ASC
  body: json
  auth: inherit
}

params:query {
  offset: {{offset}}
  limit: {{limit}}
  orderBy: claimsetName
  direction: ASC
}

script:post-response {
  var _ = require('lodash');
  
  test("GET Applications: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("GET Applications: Response result includes applications", function () {
      const results = res.getBody();
      expect(results.length).to.be.greaterThan(0);   
  });
  
  test("GET Applications: Response result is ordered by ClaimsetName asc", function () {
      const results = res.getBody();
      var expectedSortedOrder = _.orderBy(results, [application => application.claimSetName],['asc']);
      expect(results).to.eql(expectedSortedOrder);
  });
  
}

settings {
  encodeUrl: true
}
