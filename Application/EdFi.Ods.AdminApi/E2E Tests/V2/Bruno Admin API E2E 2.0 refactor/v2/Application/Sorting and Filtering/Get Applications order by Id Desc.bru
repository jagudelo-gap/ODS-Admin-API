meta {
  name: Get Applications order by Id Desc
  type: http
  seq: 4
}

get {
  url: {{API_URL}}/v2/applications?offset={{offset}}&limit={{limit}}&orderBy=Id&direction=DESC
  body: json
  auth: inherit
}

params:query {
  offset: {{offset}}
  limit: {{limit}}
  orderBy: Id
  direction: DESC
}

script:post-response {
  var _ = require('lodash');
  
  test("GET Applications: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("GET Applications: Response result includes applications", function () {
      const results = res.getBody();
      expect(results.length).to.be.greaterThan(0);   
  });
  
  test("GET Applications: Response result is ordered by Id desc", function () {
      const results = res.getBody();
      var expectedSortedOrder = _.orderBy(results, [application => application.id],['desc']);
      
      expect(results).to.eql(expectedSortedOrder);
  });
  
}

settings {
  encodeUrl: true
}
