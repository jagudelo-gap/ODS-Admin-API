meta {
  name: Applications - Invalid Profile
  type: http
  seq: 19
}

put {
  url: {{API_URL}}/v2/applications/{{CreatedApplicationId}}
  body: json
  auth: inherit
}

body:json {
  {
    "id": {{CreatedApplicationId}},
    "applicationName": "Updated Application Name",
    "vendorId": {{OtherApplicationVendorId}},
    "claimSetName": "Ed-Fi ODS Admin App",
    "profileIds": [9999],
    "educationOrganizationIds": [1234],
    "odsInstanceIds": [ {{ODSInstanceId}} ]
  }
  
}

script:post-response {
  test("PUT Application Invalid Profile: Status code is Bad Request", function () {
      expect(res.getStatus()).to.equal(400);
  });
  
  const response = res.getBody();
  const errors = res.getBody().errors;
  
  test("PUT Application Invalid Profile: Response matches error format", function () {
      expect(response).to.have.property("title");
      expect(response).to.have.property("errors");
  });
  
  test("PUT Application Invalid Profile: Response title is helpful and accurate", function () {
      expect(response.title.toLowerCase()).to.contain("validation");
  });
  
  test("PUT Application Invalid Profile: Response errors include messages by property", function () {
      expect(response.errors.ProfileIds.length).to.equal(1);
      expect(response.errors.ProfileIds[0]).to.contain("not found");
  });
  
}

settings {
  encodeUrl: true
}
