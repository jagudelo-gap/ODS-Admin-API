meta {
  name: Applications
  type: http
  seq: 15
}

put {
  url: {{API_URL}}/v2/applications/{{CreatedApplicationId}}
  body: json
  auth: inherit
}

body:json {
  {
    "id": {{CreatedApplicationId}},
    "applicationName": "Updated Application Name",
    "vendorId": {{OtherApplicationVendorId}},
    "claimSetName": "Ed-Fi ODS Admin App",
    "profileIds": [],
    "educationOrganizationIds": [1234],
    "odsInstanceIds": [ {{ODSInstanceId}} ],
    "enabled": false
  }
  
}

script:post-response {
  test("PUT Application: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  console.log("ðŸ”§ Setting post environment to ignore SSL certificates...");
  
  // Safely set Node.js environment variable if available (CLI only)
  try {
    if (typeof process !== 'undefined' && process.env) {
      process.env.NODE_TLS_REJECT_UNAUTHORIZED = '0';
    }
  } catch (e) {
    // Ignore in UI environment
  }
  
  const axios = require('axios');
  const API_URL = bru.getEnvVar("API_URL");
  const TOKEN = bru.getEnvVar("TOKEN");

  // Configure axios to handle SSL and network issues
  const axiosConfig = {
    headers: {
      'Content-Type': 'application/json',
      'Authorization': `Bearer ${TOKEN}`
    },
    validateStatus: function (status) {
      return status < 500;
    },
    timeout: 30000
  };

  // Add tenant header if multitenant mode is enabled
  if (bru.getEnvVar("isMultitenant") == "true") {
    axiosConfig.headers['Tenant'] = `${bru.getEnvVar("tenant1")}`;
  }

  try {
     let applicationId = bru.getVar("CreatedApplicationId");
     const applicationResponse = await axios.get(`${API_URL}/v2/applications/${applicationId}`, axiosConfig);

    if (applicationResponse.status === 200) {
      console.log("âœ… Application found successfully");

      test("PUT Application: Response result includes updated application", function () {
          expect(applicationResponse.data.applicationName).to.equal("Updated Application Name");
          expect(applicationResponse.data.claimSetName).to.equal("Ed-Fi ODS Admin App");
          expect(applicationResponse.data.educationOrganizationIds.length).to.equal(1);
          expect(applicationResponse.data.profileIds.length).to.equal(0);
          expect(applicationResponse.data.odsInstanceIds.length).to.equal(1);
          expect(applicationResponse.data.enabled).to.equal(false);
      });
      test("PUT Application: Response result does not include application key and secret", function () {
          expect(applicationResponse.data).to.not.have.property("key");
          expect(applicationResponse.data).to.not.have.property("secret");
      });

    } else {
      console.log("âŒ Failed to update application");
      console.log("Status:", applicationResponse.status);
      console.log("Response data:", JSON.stringify(applicationResponse.data, null, 2));
      throw new Error(`Failed to update application - Status: ${applicationResponse.status}, Data: ${JSON.stringify(applicationResponse.data)}`);
    }

    let vendorId = bru.getVar("ApplicationVendorId");
    const vendorResponse = await axios.get(`${API_URL}/v2/vendors/${vendorId}/applications`, axiosConfig);

    if (vendorResponse.status === 200) {
      console.log("âœ… Vendor Not have an application associated");
      test("PUT Application: Request updated Application/Vendor relationship", function () {
          expect(vendorResponse.data.length).to.equal(0);
      });

    } else {
      console.log("âŒ Failed to update application");
      console.log("Status:", vendorResponse.status);
      console.log("Response data:", JSON.stringify(vendorResponse.data, null, 2));
      throw new Error(`Failed to update application - Status: ${vendorResponse.status}, Data: ${JSON.stringify(vendorResponse.data)}`);
    }
    
  } catch (error) {
    console.log("Error in post-request setup:", error.message);
  }
    
}

settings {
  encodeUrl: true
}
