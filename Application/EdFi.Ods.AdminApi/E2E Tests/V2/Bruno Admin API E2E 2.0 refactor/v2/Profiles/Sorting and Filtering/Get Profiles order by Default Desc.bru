meta {
  name: Get Profiles order by Default Desc
  type: http
  seq: 2
}

get {
  url: {{API_URL}}/v2/profiles?offset={{offset}}&limit={{limit}}&direction=desc
  body: json
  auth: inherit
}

params:query {
  offset: {{offset}}
  limit: {{limit}}
  direction: desc
}

script:post-response {
  var _ = require('lodash');
  
  test("GET Vendors: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("GET Vendors: Response result includes vendors", function () {
      const results = res.getBody();
      expect(results.length).to.be.greaterThan(0);   
  });
  
  test("GET Vendors: Response result is ordered by Name desc", function () {
      const results = res.getBody();
      var expectedSortedOrder = _.orderBy(results, [profile => profile.name],['desc']);
      expect(results).to.eql(expectedSortedOrder);
  });
  
}

settings {
  encodeUrl: true
}
