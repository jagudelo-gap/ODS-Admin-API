meta {
  name: Profiles
  type: http
  seq: 7
}

get {
  url: {{API_URL}}/v2/profiles/?offset={{offset}}&limit={{limit}}
  body: none
  auth: inherit
}

params:query {
  offset: {{offset}}
  limit: {{limit}}
}

script:post-response {
  test("GET Profiles: Status code is OK", function () {
      expect(res.getStatus()).to.equal(200);
  });
  
  test("GET Profiles: Response result includes profiles", function () {
      const results = res.getBody();
      expect(results.length).to.be.greaterThan(0);   
  });
  
  const response = res.getBody();
  const Ajv = require('ajv');
  const ajv = new Ajv();
  const GetProfilesSchema = {
    "type": "array",
    "items": [
      {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name"     
        ]
      }
    ]
  }
  
  test("GET Profile: Validation Schema Response", () => {
      const valid = ajv.validate(GetProfilesSchema, response);
      expect(valid).to.be.true;
      
      if (!valid) {
          console.log("Schema validation errors:", ajv.errors);
      }
  });
  
}

settings {
  encodeUrl: true
}
